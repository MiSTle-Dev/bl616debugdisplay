// connections to the internal BL616 controller
IO_LOC "spi_csn" B1; // TMS GPIO0 _SS
IO_PORT "spi_csn" PULL_MODE=UP IO_TYPE=LVCMOS33 BANK_VCCIO=3.3;
IO_LOC "spi_sclk" C1; //TCK GPIO1 SCLK 4K7 PD SOM
IO_PORT "spi_sclk" PULL_MODE=NONE DRIVE=OFF IO_TYPE=LVCMOS33 BANK_VCCIO=3.3;
IO_LOC "spi_dat" A3; // TDI GPIO3 MOSI
IO_PORT "spi_dat" PULL_MODE=NONE DRIVE=OFF IO_TYPE=LVCMOS33 BANK_VCCIO=3.3;
IO_LOC "spi_dir" A2; // TDO GPIO2 MISO 3K3 PD Board
IO_PORT "spi_dir" PULL_MODE=NONE DRIVE=8 IO_TYPE=LVCMOS33 BANK_VCCIO=3.3;
IO_LOC "spi_irqn" C3; // UART TX
IO_PORT "spi_irqn" PULL_MODE=NONE DRIVE=8 IO_TYPE=LVCMOS33 BANK_VCCIO=3.3;

// tang onboard bl616 Âµc uart
IO_LOC "uart_rx" B3;
//IO_LOC "uart_tx" C3;
IO_PORT "uart_rx" IO_TYPE=LVCMOS33 BANK_VCCIO=3.3;
IO_PORT "uart_tx" DRIVE=8 IO_TYPE=LVCMOS33 BANK_VCCIO=3.3;
IO_LOC "uart_tx" K6; // re-use USB-A negative, wire to BL616 GPIO12 and pad of C22, C22 100nF remove

IO_LOC "bl616_mon_tx" L6; // re-use USB A positive
IO_PORT "bl616_mon_tx" DRIVE=8 IO_TYPE=LVCMOS33 BANK_VCCIO=3.3;
